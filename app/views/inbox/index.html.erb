<div class="messageContainer">
  <div class="column">  
    <div class="panel-heading" style="background: #1496ED; color: #FFFFFF">
      <h3>Users</h3>
    </div>
    <div class="box">
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <article class="media">
              <figure class="media-left">
                <p class="image is-64x64">
                  <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
              </figure>
              <li><%= link_to user.username, messages_path(user_id: user), method: :get %></li>
            </article>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>