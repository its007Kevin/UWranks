<br>
<h1 class="header-text">Sign in to UWranks</h1>
<div class="sign-in-panel2 box">
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left has-icons-right">
        <%= f.text_field :email, :class => "input", :type => "email", :placeholder => "Email" %>
        <span class="icon is-small is-left">
          <i class="fa fa-envelope"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Password</label>
      <div class="control has-icons-left">
        <%= f.password_field :password, :class => "input", :type => "password", :placeholder => "Password" %>
        <span class="icon is-small is-left">
          <i class="fa fa-lock"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <div class="control">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </div>
    </div>
    <div class="field">
      <p class="control">
        <%= f.submit 'Login', :class => "button is-fullwidth is-centered is-success" %>
      </p>
      <br>
      <%= link_to "Forgot your password?", new_password_path(:user) %>
      <br>
      <%= link_to "Sign up", new_registration_path(:user) %>
    </div>
  <% end %>
</div>
