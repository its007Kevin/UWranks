<br>
<h1 class="header-text">Reset your password</h1>
<div class="password-reset-panel box rounded-corners">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="field">
	    <label class="label">Email</label>
	    <div class="control has-icons-left">
	    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email address", :class => "input", :type => "email" %>
    	<span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
		</div>
	  </div>
	  <div class="field is-grouped is-grouped-centered">
	    <%= f.submit "Send password reset email", class: "button is-success", :style => "width: 400px" %>
	  </div>
	<% end %>
</div>
