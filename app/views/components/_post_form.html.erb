<div class="box">
	<div class="columns">
		<div class="column is-1">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
		</div>
		<div class="column is-11">
			<%= form_for(@newPosts) do |f| %>
			  <div class="field">
			    <div class="control">
			      <%= f.text_field :content, class: "input" %>
			    </div>
			    <br>
			    <div class="control">
			      <%= f.submit "Add Post", class: "button is-link" %>
			    </div>
			  </div>
			<% end %>
		</div>
	</div>
</div>