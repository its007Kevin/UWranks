<div class="box">
	<div class="columns">
		<div class="column is-1">
			<img src="/avatar.png" class="rounded-corners" height="50px" width="50px"></img>
		</div>
		<div class="column is-11">
			<%= form_for(@newPosts) do |f| %>
			  <div class="field">
			    <div class="control">
			      <%= f.text_field :content, :class => "input" %>
			    </div>
			    <br>
			    <div class="control">
			      <%= f.submit "Add Post", class: "button is-link" %>
			    </div>
			  </div>
			<% end %>
		</div>
	</div>
</div>