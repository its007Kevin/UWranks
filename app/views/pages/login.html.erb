<% if !user_signed_in? %>
	<div class="index">
		<div class="columns">
			<div class="column is-6">
				<div class="desc">
					<p class="title is-2">Didn't get the offer?</p>
					<p class="subtitle">See how others are ranking the job.</p>
					<p class="subtitle">Sign up now.</p>
				</div>
			</div>
			<div class="column is-6">
				<div class="sign-in-panel box">
				<label class="label">Sign In</label>
				<br>
				<%= form_for(:user, :url => session_path(:user)) do |f| %>
					<div class="field">
						<label class="label">Email</label>
						<p class="control has-icons-left has-icons-right">
							<%= f.text_field :email, :class => "input", :type => "email", :placeholder => "Email" %>
							<span class="icon is-small is-left">
								<i class="fa fa-envelope"></i>
							</span>
						</p>
					</div>
					<div class="field">
						<label class="label">Password</label>
						<p class="control has-icons-left">
							<%= f.password_field :password, :class => "input", :type => "password", :placeholder => "Password" %>
							<span class="icon is-small is-left">
							<i class="fa fa-lock"></i>
						</span>
						</p>
					</div>
					<div class="field">
						<div class="control">
								<%= f.check_box :remember_me %>
								<%= f.label :remember_me %>
						</div>
					</div>
					<div class="field">
						<p class="control">
							<%= f.submit 'Login', :class => "button is-success" %>
						</p>
						<br>
						<%= link_to "Forgot your password?", new_password_path(:user) %>
						<br>
						<%= link_to "Sign up", new_registration_path(:user) %>
					</div>
				<% end %>
			</div>
			</div>
		</div>
	</div>
	<div class="landingPages">
		<p class="text-center title">
			Create an Account
			<br />
			<br />
			<br />
			<%= link_to "Sign up", new_registration_path(:user), :class =>"button is-success is-large" %>
		</p>
	</div>
	<hr />
	<div class="landingPages">
		<p class="text-center title">
			Tell us how you would rank your jobs
			<br />
			<br />
			<img class="rounded-corners" src="/demo1.png" width="60%"/>
		</p>
	</div>
	<hr />
	<div class="landingPages">
		<p class="text-center title">
			We'll tell you how other people ranked it
			<br />
			<br />
			<br />
			<img class="rounded-corners" src="/demo2.png" width="60%"/>
		</p>
	</div>
	<footer class="footer">
	</footer>
<% else %>
	<script>
		document.location = "/home"
	</script>
<% end %>
