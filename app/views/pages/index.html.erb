<% if !user_signed_in? %>
	<div class="index">
		<div class="sign-in-panel box">
			<label class="label">
				Sign In
			</label>
			<br>
			<%= form_for(:user, :url => session_path(:user)) do |f| %>
				<div class="field">
					<label class="label">Email</label>
					<p class="control has-icons-left has-icons-right">
						<%= f.text_field :email, :class => "input", :type => "email", :placeholder => "Email" %>
						<span class="icon is-small is-left">
							<i class="fa fa-envelope"></i>
						</span>
					</p>
				</div>
				<div class="field">
					<label class="label">Password</label>
					<p class="control has-icons-left">
						<%= f.password_field :password, :class => "input", :type => "password", :placeholder => "Password" %>
						<span class="icon is-small is-left">
						<i class="fa fa-lock"></i>
					</span>
					</p>
				</div>
				<div class="field">
					<div class="control">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
					</div>
				</div>
				<div class="field">
					<p class="control">
						<%= f.submit 'Login', :class => "button is-success" %>
					</p>
					<br>
					<%= link_to "Forgot your password?", new_password_path(:user) %>
					<br>
					<%= link_to "Sign up", new_registration_path(:user) %>
				</div>
			<% end %>
		</div>
	</div>
<% else %>
	<script>
		document.location = "/home"
	</script>
<% end %>